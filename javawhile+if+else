public class Main {
  public static void main(String[] args) {

    System.out.println("Hello world!");

    int i = 1;
    boolean isEven = false;
    
    //counts from 0 to 10
    //provides wheather or not the number is odd or even
    
    while (i <= 10) {
      String evenOrOdd = "";
      if(isEven == true){
        evenOrOdd = "even";
      }else{
        evenOrOdd = "odd";
      }
      System.out.println(i + " " + evenOrOdd);
      i = i + 1;
      isEven = !isEven;
    }
  }
}
