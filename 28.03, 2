public class Main {
  public static void main(String[] args) {

    //AND
    //I will be able to open the doors, if the first key is unlocked AND if the second key is unlocked.
    boolean firstKey = true;
    boolean seconKey = false;

    if(firstKey && seconKey){
      System.out.println("You can open the door!");
    }else{
      System.out.println("You can't open the door!");
    }

    //I will log you in if your username is correct AND if your password is correct.
    String username = "Anna";
    String password = "password";
    if(username == "Ella" && password == "password"){
      System.out.println("You are logged in!");
    }else{
      System.out.println("Wrong password or username!");
    }

    //OR
    //I will buy eggs if they will be on the sale OR they will cost less than 2.50

    boolean sale = true;
    double cost = 3.5;
      if(sale || cost < 2.50){
      System.out.println("Buy the eggs!");
      }else{
      System.out.println("Don't buy the eggs!");
      }
     //I will go running, if I will have enough energy OR if the weather is shiny.
    boolean enoughEnergy = true;
    boolean shinyWeather = false;
    if(enoughEnergy || shinyWeather){
      System.out.println("Go running!");
    }else{
      System.out.println("Don't go running!");
    }

    //AND OR
    //I will go in this restaurant if there is going to be squid OR shrimps, AND I need there to have white wine as well
       boolean squid = true;
       boolean shrimps = false;
       boolean whiteWine = true;
       if(squid || shrimps && whiteWine){
        System.out.println("I will go in this restaurant!");
       }else{
        System.out.println("I will not go in this restaurant!");
      }
    //NOT
    //I will go to a restaurant, if the waitress is NOT rude
    boolean waitressRude = false;
    if(!waitressRude){
      System.out.println("I will go to a restaurant!");
    }

    //Combine NOT with AND OR
    //I will go in this restaurant if there is going to be squid or shrimps, and I need there to have white wine as well. ALSO, waitress should NOT be rude
    boolean squidTwo = true;
    boolean shrimpsTwo = false;
    boolean whiteWineTwo = true;
    boolean waitressRudeTwo = true;
    if((squidTwo || shrimpsTwo) && whiteWineTwo && !waitressRudeTwo){
      System.out.println("i will go in this restaurant!");
     }else{
      System.out.println("I will not go in this restaurant!");
    }


  }
}
